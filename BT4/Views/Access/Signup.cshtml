﻿@{
    Layout = null;
}

@model RegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../LayoutAdmin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../LayoutAdmin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="../../LayoutAdmin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../LayoutAdmin/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="../../LayoutAdmin/assets/images/logo.svg" alt="Logo">
                            </div>
                            <h4>New here?</h4>
                            <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>

                            @using (Html.BeginForm("Signup", "Access", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.User.Username, new { @class = "form-control form-control-lg", placeholder = "Username", required = "required" })

                                    @if (!string.IsNullOrEmpty(Model.UsernameError))
                                    {
                                        <span class="text-danger">@Model.UsernameError</span>
                                    }
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.User.Password, new { @class = "form-control form-control-lg", placeholder = "Password", required = "required" })

                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.KhachHang.TenKhachHang, new { @class = "form-control form-control-lg", placeholder = "Tên Khách Hàng", required = "required" })

                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.KhachHang.NgaySinh, new { @class = "form-control form-control-lg", type = "date", required = "required" })

                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.KhachHang.SoDienThoai, new { @class = "form-control form-control-lg", placeholder = "Số Điện Thoại", required = "required", type = "tel" })

                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.KhachHang.DiaChi, new { @class = "form-control form-control-lg", placeholder = "Địa Chỉ", required = "required" })

                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.KhachHang.LoaiKhachHang, new { @class = "form-control form-control-lg", placeholder = "Loại Khách HÀng", required = "required" })

                                </div>

                                <div class="form-group">
                                    @Html.TextAreaFor(m => m.KhachHang.GhiChu, new { @class = "form-control form-control-lg", placeholder = "Ghi Chú" })

                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">SIGN UP</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a href="Login" class="text-primary">Login</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../LayoutAdmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="../../LayoutAdmin/assets/js/off-canvas.js"></script>
    <script src="../../LayoutAdmin/assets/js/hoverable-collapse.js"></script>
    <script src="../../LayoutAdmin/assets/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>