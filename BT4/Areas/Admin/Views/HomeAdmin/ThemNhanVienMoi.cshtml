@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model BT4.Models.TNhanVien

@{
    ViewData["Title"] = "ThemNhanVienMoi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>ThemSanPhamMoi</h1>

<h4>TNhanVien</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ThemNhanVienMoi">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Thông tin nhân viên -->
            <div class="form-group">
                <label asp-for="MaNhanVien" class="font-weight-bold">Mã Nhân Viên</label>
                <input asp-for="MaNhanVien" class="form-control" placeholder="Nhập mã nhân viên" />
                <span asp-validation-for="MaNhanVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenNhanVien" class="font-weight-bold">Tên Nhân Viên</label>
                <input asp-for="TenNhanVien" class="form-control" placeholder="Nhập tên nhân viên" />
                <span asp-validation-for="TenNhanVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgaySinh" class="font-weight-bold">Ngày Sinh</label>
                <input asp-for="NgaySinh" type="date" class="form-control" />
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoDienThoai1" class="font-weight-bold">Số Điện Thoại 1</label>
                <input asp-for="SoDienThoai1" class="form-control" placeholder="Số điện thoại liên hệ" />
                <span asp-validation-for="SoDienThoai1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoDienThoai2" class="font-weight-bold">Số Điện Thoại 2</label>
                <input asp-for="SoDienThoai2" class="form-control" placeholder="Số điện thoại khác" />
                <span asp-validation-for="SoDienThoai2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="font-weight-bold">Địa Chỉ</label>
                <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChucVu" class="font-weight-bold">Chức Vụ</label>
                <select asp-for="ChucVu" class="form-control" asp-items="ViewBag.ChucVu"></select>
                <span asp-validation-for="ChucVu" class="text-danger"></span>
            </div>

            <!-- Thông tin tài khoản -->
            <h4 class="text-secondary mt-4">Thông Tin Tài Khoản</h4>
            <div class="form-group">
                <label asp-for="Username" class="font-weight-bold">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="font-weight-bold">Password</label>
                <input type="password" name="password" class="form-control" placeholder="Mật khẩu" />
            </div>

            <!-- Nút lưu và quay lại -->
            <div class="form-group text-center mt-4">
                <input type="submit" value="Lưu Nhân Viên" class="btn btn-success btn-lg mr-2" />
                <a asp-action="DanhMucNhanVien" class="btn btn-secondary btn-lg">Quay lại</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


